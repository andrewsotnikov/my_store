%h1= @item.name
%p{style: "color: green"}= flash[:success_item]
%ul
  %li
    ID: #{@item.id}
  %li
    Цена: #{@item.price} руб.
  %li= "Вещественный: " +   |
      case @item.real       |
      when true then "да"   |
      when false then "нет" |
      else "не определен"   |
      end                   |
  %li
    #{t "item.weight_capitalize"}: #{@item.weight} #{t "weight.kg"}.
  %li
    Описание: #{urls_to_links(urls_to_images(@item.description))}
%p= link_to "Список товаров", items_path
- if @current_user_admin
  %p= link_to "Изменить", edit_item_path(@item)
  %p= link_to "Удалить", @item, method: :delete, data: {confirm: "Подтвердите удаление товара"}
