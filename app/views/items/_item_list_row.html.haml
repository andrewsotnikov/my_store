%tr
  %td= link_to item.id, item
  %td= item.name
  %td= item.price
  %td= case item.real       |
      when true then "да"   |
      when false then "нет" |
      else "не определен"   |
      end                   |
  %td= item.weight
  %td= urls_to_links(item.description)
  %td{align: "right"}
    = item.votes_count
    = link_to '+', upvote_item_path(item)
